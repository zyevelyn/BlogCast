<% content_for :title do %> 
Create Post
<% end %>

<% content_for :robots do %> 
<meta name="robots" content="noarchive"/>
<meta name="robots" content="noindex, nofollow"/>
<% end %>

<% content_for :modstyles do %> 
<%= stylesheet_link_tag "modstyles" %>
<% end %>

<% content_for :modjs do %>
<%= javascript_include_tag "showdown" %>
<%= javascript_include_tag "wmd" %>
<%= javascript_include_tag "textarearesizer" %>
<%= javascript_include_tag "elastic" %>
<% end %>

<div class="post">
	<h2><a href="#" class="article">Share your life here   </a>
	<span class="nobreak">
		<span class="author"><%= current_user.name %></span>
		<span class="date"><%= Time.now.strftime("%b %d") %></span>
	</span>
	</h2>
	
	<p class="meta"><a href="#">Comments</a></p>
		
	<div id="wmd-preview" class="entry"></div>
</div><!--post-->

<% content_for :sidebar do %> 
<div class="sidebar">
	<%= form_for(@post) do |f| %>
	<div id="title-container">
		<%= f.text_field :title %> 
		<p>/title of your article</p>
	</div>
	
	<div id="wmd-container">
	<div id="wmd-button-bar"></div>

	<%= f.text_area :markdown, :id => "wmd-input", :cols => "92", :rows => "15" %>
	
	</div><!--wmd-container-->
	
	<ul class="options form-submit">
		<li><%= f.submit "Public your article", :name => "save_post", :confirm => "Public one article ?" %></li>
		<li class="right"><%= f.submit "Record your draft", :id => "draft_submit", :name => "save_draft" %></li>
	</ul>
	<% end %> 
</div><!--sidebar-->
<% end %>